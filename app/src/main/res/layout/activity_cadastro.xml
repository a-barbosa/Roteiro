<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vsouz.roteiro1.CadastroActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nome"
        android:ems="10"
        android:id="@+id/nome"
        android:layout_alignStart="@+id/sobrenome"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Sobrenome"
        android:id="@+id/sobrenome"
        android:layout_above="@+id/usuario"
        android:layout_below="@+id/nome"
        android:layout_alignStart="@+id/usuario"
         />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="UsuÃ¡rio"
        android:id="@+id/usuario"
        android:layout_above="@+id/senha"
        android:layout_below="@+id/sobrenome"
        android:layout_alignStart="@+id/sobrenome"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Senha"
        android:id="@+id/senha"
        android:layout_above="@+id/confirmarsenha"
        android:layout_below="@id/usuario"
        android:layout_alignStart="@+id/usuario"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Confirmar Senha"
        android:id="@+id/confirmarsenha"
        android:layout_above="@+id/cadastrar"
        android:layout_below="@+id/senha"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="129dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:id="@+id/cadastrar"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />



</LinearLayout>
